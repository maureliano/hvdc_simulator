# }

###############################################################################
# Servidor Principal (HTTP)
###############################################################################
server {
    listen 80 default_server;
    listen [::]:80 default_server;
    
    server_name _;
    
    # Limite de tamanho de upload
    client_max_body_size 50M;
    
    # Timeouts
    proxy_connect_timeout 60s;
    proxy_send_timeout 60s;
    proxy_read_timeout 60s;
    
    # Logging
    access_log /var/log/nginx/hvdc-simulator-access.log combined buffer=32k flush=5s;
    error_log /var/log/nginx/hvdc-simulator-error.log warn;
    
    ###########################################################################
    # Compressão Gzip
    ###########################################################################
    gzip on;
    gzip_vary on;
    gzip_proxied any;
    gzip_comp_level 6;
    gzip_types text/plain text/css text/xml text/javascript 
               application/json application/javascript application/xml+rss 
               application/rss+xml font/truetype font/opentype 
               application/vnd.ms-fontobject image/svg+xml;
    gzip_disable "msie6";
    
    ###########################################################################
    # Headers de Segurança
    ###########################################################################
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-XSS-Protection "1; mode=block" always;
    add_header Referrer-Policy "no-referrer-when-downgrade" always;
    
    ###########################################################################
    # Proxy para Aplicação Node.js
    ###########################################################################
    location / {
        proxy_pass http://hvdc_app;
        proxy_http_version 1.1;
        
        # Headers essenciais
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Forwarded-Host $server_name;
        
        # Buffering
        proxy_buffering on;
        proxy_buffer_size 4k;
        proxy_buffers 8 4k;
        proxy_busy_buffers_size 8k;
        
        # Cache bypass
        proxy_cache_bypass $http_upgrade;
        proxy_no_cache $http_upgrade;
    }
    
    ###########################################################################
    # WebSocket Support (para real-time features)
    ###########################################################################
    location /ws {
        proxy_pass http://hvdc_app;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        
        # WebSocket timeouts
        proxy_read_timeout 86400s;
        proxy_send_timeout 86400s;
    }
    
    ###########################################################################
    # API tRPC (sem cache)
    ###########################################################################
    location /api/trpc {
        proxy_pass http://hvdc_app;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        
        # Sem cache para API
        proxy_no_cache 1;
        proxy_cache_bypass 1;
    }
    
    ###########################################################################
    # Arquivos Estáticos (com cache agressivo)
    ###########################################################################
    location ~* \.(js|css|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot|otf)$ {
        proxy_pass http://hvdc_app;
        
        # Cache no navegador por 1 ano
        expires 1y;
        add_header Cache-Control "public, immutable";
        
        # Não revalidar
        add_header ETag "";
        add_header Last-Modified "";
        
        # Logging desabilitado para arquivos estáticos
        access_log off;
    }
    
    ###########################################################################
    # HTML (sem cache, revalidar sempre)
    ###########################################################################
    location ~* \.html?$ {
        proxy_pass http://hvdc_app;
        
        # Sem cache
        expires -1;
        add_header Cache-Control "no-cache, no-store, must-revalidate";
        add_header Pragma "no-cache";
        add_header Expires "0";
    }
    
    ###########################################################################
    # Negar acesso a arquivos sensíveis
    ###########################################################################
    location ~ /\. {
        deny all;
        access_log off;
        log_not_found off;
    }
    
    location ~ ~$ {
        deny all;
        access_log off;
        log_not_found off;
    }
    
    ###########################################################################
    # Health check (para load balancer)
    ###########################################################################
    location /health {
        access_log off;
        return 200 "healthy\n";
        add_header Content-Type text/plain;
    }
}

